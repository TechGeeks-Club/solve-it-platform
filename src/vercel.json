{
    "version": 2,
    "builds": [
        {
            "src": "src/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "entrypoint": "gunicorn src.wsgi:application --bind 0.0.0.0:$PORT"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
          }
    ],
    "outputDirectory": "static"

    
}